<%= render partial: 'users/errors', locals: { errors: flash[:new_solution_errors], info_messages: flash[:info_messages] } if flash[:modal] == 'signInModal' %>


<%= form_for(@user, as: :user, url: session_path(:user)) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <%= f.email_field :email, autofocus: true, placeholder: 'Электронная почта', required: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Пароль', required: true %>
    </div>
  </div>
  <div class="modal-footer">
    <div class="row">
      <div class="col-md-12">
        <%= f.submit "Войти", class: 'redBtn' %>
        <br/>
        <br/>
         <a class="redBtn" href="<%=new_user_password_path%>"> Забыли пароль?</a>
      </div>
    </div>
  </div>
<% end %>
