<section class="loadVideo">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
      <!-- нужно тут менять week: 4 (четвертая неделя) -->
        <% video = current_user.videos.where(week: 4).first %>
        <% if video %>
          <div class="video-preview">
            <h3>Ваше видео</h3>
            <%= video.iframe(width: '600', height: '350') || link_to(video.link, video.link, target: '_blank') %>
          </div>
          <!-- нужно тут менять (Time.now.strftime('%W').to_i - 27) ==  4 (четвертая неделя) -->
        <%elsif DateTime.now.wday == 6 && (Time.now.strftime('%W').to_i - 27) == 4  %>
          <div class="video-form">
            <h3>Внимание! Отправьте ссылку на отчетное видео,<br/> крайний срок суббота вечер</h3>
            <%= render partial: 'videos/form', locals: { video: Video.new } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
