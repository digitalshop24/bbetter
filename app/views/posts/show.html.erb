<section class="forumSec">
  <div class="headPage">
    <h1><a style="color:inherit;
  text-decoration: none;" href='/posts'>Форум</a></h1>
    <ul class="tags">
      <li><%= will_paginate @comments %></li>
    </ul>
  </div>

  <div class="postItem">
    <div class="textWrap">
      <h4>Автор поста:  <%=@post.user.name%></h4>
      <h5><%= @post.title %></h5>
    </div>


  </div>

  <% @comments.each do |comment| %>
  <div class="postItem">
    <div class="imgWrap" style="background-image:url('<%= asset_path('feedbackSec/1_tren.png') %>');"></div>
    <div class="textWrap">
      <h5><%= comment.content.html_safe %></h5>
      <ul class="into">
      <li><i class="fa fa-user" aria-hidden="true"></i><%= comment.user.name if comment.user.present? %></li>
      <li><%= comment.updated_at.strftime("%H:%M")%></li>
      </ul>
    </div>


  </div>
  <% end %>
<div class="postItem">
     <%= form_for @comment, url: '/comment/'+ @post.id.to_s do |f|%>
     <%= f.cktext_area :content, row: 10, :ckeditor => {:toolbar => 'mini'}%>
     <%= f.submit %>
  <%end%>
</div>

</section>



