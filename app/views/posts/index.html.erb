 <ul class="right">
    <% if current_user %>
      <div class="dropdown right">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="
            margin-left: 0px;
            position: fixed;
            height: 70px;
            width: 101px;
            background-color: transparent;
            border-color: transparent;
        ">
          <button style="width:100px;" class="grayBtn menuLoginBtn"><span><%=current_user.name%></span></button>
          <ul class="dropdown-menu" data-no-turbolink="true">
            <li><a href="/profile">Кабинет</a></li>
            <li><a href=""  data-toggle="modal" data-target="#editProfileModal">Редактировать</a></li>
            <li><%= link_to 'Выйти', :destroy_user_session, method: :delete %></li>
          </ul>
        </button>
      <% else %>
        <a href='/users/sign_in'>Войти</a>
        <button class="grayBtn" type="button" onclick="yaCounter38070020.reachGoal('registracija'); return true;" type="button" data-toggle="modal" data-target="#regModal">Регистрация</button>
      <% end %>
    </ul>
<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<%= will_paginate @posts %>
<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name if post.user.present? %></td>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.updated_at %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

