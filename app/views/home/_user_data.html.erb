        <div class="col-md-12 text-left form">
          <h2 class="text-center"><%=  @user.moto %></h2>
          <div class="row">
            <div class="col-md-6">
              <div class="aploadCarousel">
                <div>
                  <ul class="item">
                    <input accept="image/*" id="fileElem" multiple=""  style="display:none" type="file">
                    <div class="btn_fo_div user_data_btn btn_left text-center" id="fileSelect">&lt;&lt;ДО&gt;&gt;<br/>
                      <br/>
                      Загрузить  <br/>
                      &lt;&lt;Спереди&gt;&gt;</div>
                    <input accept="image/*" id="fileElem_2" multiple=""  style="display:none" type="file">
                    <div class="btn_fo_div user_data_btn btn_center text-center" id="fileSelect_2">&lt;&lt;ДО&gt;&gt;<br/>
                      <br/>
                      Загрузить <br>
                      &lt;&lt;Сзади&gt;&gt;</div>
                  </ul>
                </div>
                <div>
                  <ul class="item">
                    <input accept="image/*" id="fileElem_3" multiple=""  style="display:none" type="file">
                    <div class=" btn_fo_div user_data_btn btn_left text-center" id="fileSelect_3">&lt;&lt;ДО&gt;&gt;<br/>
                      <br/>
                      Загрузить <br>
                      &lt;&lt;Слева&gt;&gt;</div>
                    <input accept="image/*" id="fileElem_4" multiple=""  style="display:none" type="file">
                    <div class=" btn_fo_div user_data_btn btn_center text-center" id="fileSelect_4">&lt;&lt;ДО&gt;&gt;<br/>
                      <br/>
                      Загрузить <br>
                      &lt;&lt;Справа&gt;&gt;</div>
                  </ul>
                </div>
                <div>
                  <ul class="item">
                    <input accept="image/*" id="fileElem_5" multiple=""  style="display:none" type="file">
                    <div class="btn_fo_div user_data_btn btn_left text-center" id="fileSelect_5">&lt;&lt;После&gt;&gt;<br/>
                      <br/>
                      Загрузить <br>
                      &lt;&lt;Спереди&gt;&gt;</div>
                    <input accept="image/*" id="fileElem_6" multiple=""  style="display:none" type="file">
                    <div class="btn_fo_div user_data_btn btn_left text-center" id="fileSelect_6">&lt;&lt;После&gt;&gt;<br/>
                      <br/>
                      Загрузить <br>
                      &lt;&lt;Сзади&gt;&gt;</div>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <%= f.file_field :motivation, id: 'fileElem_7', style: 'display:none', accept: 'image/*' %>
              <!-- <input accept="image/*" id="fileElem_7" multiple=""  style="display:none" type="file"> -->
              <button class="btn_fo_div user_data_btn btn_right text-center" id="fileSelect_7">Загрузить <br>
                Мотивашку</button>
              <span id="filelist_7" class="img_show_block hidden"></span>
              <!-- <button class="user_data_btn btn_right text-center"></button> -->
            </div>
            <div class="col-md-3 text-center user_paramentry">
              <h3>Показатели участника</h3>
              <p>Замеры веса и объемов производить<br>
                в расслабленном состоянии и минимуме одежды.</p>
              <ul>
                <li><%= f.text_field :weight, placeholder: 'Вес', required: true, disabled: f.object.weight.present? %></li>
                <li><%= f.text_field :height, placeholder: 'Рост', required: true, disabled: f.object.height.present? %></li>
                <li><%= f.text_field :age, placeholder: 'Возраст', required: true, disabled: f.object.age.present? %></li>
              </ul>
              <ul style="margin-left: 20px;">
                <li><%= f.text_field :chest, placeholder: 'Грудь', required: true, disabled: f.object.chest.present? %></li>
                <li><%= f.text_field :waist, placeholder: 'Талия', required: true, disabled: f.object.waist.present? %></li>
                <li><%= f.text_field :thigh, placeholder: 'Бедра', required: true, disabled: f.object.thigh.present? %></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-12 text-center footer_user_data">
          <p class="pink" style="">Загрузка фотографий станет доступной после оплаты тарифа</p>
          <%= f.submit 'Сохранить изменения', class: 'redBtn' %>
        </div>
      </div>
    <% end %>
  </div>
</section>